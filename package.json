{
	"name": "smartcopy",
	"displayName": "SmartCopy",
	"description": "Customize path copying",
	"version": "0.0.1",
	"publisher": "evanraalte",
	"repository": "https://github.com/evanraalte/smartCopy",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.smartcopy"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.smartcopy",
				"title": "Copy Unix path"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "extension.smartcopy",
					"group": "6_copypath"
				}
			],
			"editor/title/context": [
				{
					"command": "extension.smartcopy",
					"group": "6_copypath"

				}
			]
		},
		"configuration" :{
			"title": "Smart copy",
			"properties": {
				"smartCopy.prefix" :{
					"type": "string",
					"default": "",
					"markdownDescription": "Set the prefix for a unix copy"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.5",
		"mocha": "^10.2.0",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	}
}